<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.mutabilitydetector</groupId>
	<artifactId>ClientOfMutabilityDetector</artifactId>
	<name>ClientOfMutabilityDetector</name>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>


	<description>Client project used to test Mutability Detector.
	</description>
	<url>http://code.google.com/p/mutability-detector</url>
	<issueManagement>
		<url>http://code.google.com/p/mutability-detector/issues/list</url>
	</issueManagement>
	<scm>
		<url>http://mutability-detector.googlecode.com/svn/trunk/</url>
	</scm>
	<repositories>
		<repository>
			<id>Sonatype Snapshots</id>
			<url>http://oss.sonatype.org/content/repositories/snapshots</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>


	<dependencies>
		<dependency>
			<groupId>org.mutabilitydetector</groupId>
			<artifactId>MutabilityDetector</artifactId>
			<version>0.9-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
		
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit-dep</artifactId>
			<version>4.8</version>
			<scope>test</scope>
		</dependency>
		
		<dependency>
		    <groupId>com.google.guava</groupId>
		    <artifactId>guava</artifactId>
		    <version>12.0</version>
		</dependency>
		
		
		<dependency>
			<groupId>joda-time</groupId>
			<artifactId>joda-time</artifactId>
			<version>2.0</version>
			<scope>compile</scope>
		</dependency>
		
		<dependency>
			<groupId>org.hamcrest</groupId>
			<artifactId>hamcrest-core</artifactId>
			<version>1.2</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.joda-money</groupId>
			<artifactId>joda-money</artifactId>
			<version>0.5</version>
			<scope>system</scope>
			<systemPath>${basedir}/lib/joda-money-0.5-SNAPSHOT.jar</systemPath>
		</dependency>
		
		<dependency>
			<groupId>javax.time</groupId>
			<artifactId>threeten</artifactId>
			<version>0.7</version>
			<scope>system</scope>
			<systemPath>${basedir}/lib/threeten-0.7.0-alpha.jar</systemPath>
		</dependency>
		
		<dependency>
			<groupId>net.ttsui</groupId>
			<artifactId>pending</artifactId>
			<version>0.0.3</version>
			<scope>system</scope>
			<systemPath>${basedir}/lib/pending-0.0.3.jar</systemPath>
		</dependency>


	</dependencies>
</project>